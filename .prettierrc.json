{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "semi": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "tabWidth": 2,
  "useTabs": false,
  "arrowParens": "avoid",
  "singleQuote": true,
  "trailingComma": "none",
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"]
}
